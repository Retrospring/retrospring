= turbo_stream.append "answers" do
  - @answers.each do |a|
    = render 'answerbox', a: a

= turbo_stream.update "paginator" do
  - if @more_data_available
    = button_to t("voc.load"), user_path(@user),
      class: "btn btn-light",
      method: :get,
      params: { last_id: @answers_last_id },
      form: { data: { turbo_stream: true } }
